.l-header
	@extend .clearfix
	position:relative
	height: $header-height 
	background: $orange
	box-shadow: 0 0 10px -3px #000

.l-header__inner
	//@extend .fluid-container

	.header--logo
		font-family: Mission
		font-size: 36px
		background-position: center center
		float: left
		color: $lightBeige
		text-decoration: none
		padding: 20px

	.header--links
		float: right
		position: relative
		text-align: center
		font-weight: 300

		a
			line-height: 60px
			font-size: 14px
			font-weight: 300
			padding: 0 36px
			color: $lightBeige
			transition: color 0.3s linear
			vertical-align: middle


			&:hover
				text-decoration: none
				color: darken($lightBeige, 25%)

			&:first-child
				color: $lightBeige
				padding-right: 0 

				&:hover
					color: darken($lightBeige, 25%)

		img
			vertical-align: middle
			width: 50px
			padding: 0 5px 0 10px